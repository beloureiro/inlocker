{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "InLocker",
  "version": "0.8.0",
  "identifier": "com.inlocker.backup",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "cli": {
      "description": "InLocker backup automation tool",
      "args": [
        {
          "name": "backup",
          "takesValue": true,
          "description": "Run scheduled backup for config ID"
        }
      ]
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "InLocker",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "theme": "Dark",
        "devtools": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
